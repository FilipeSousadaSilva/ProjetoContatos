<div id="body">
    <ul id="contacts"></ul>
    
    <form id="saveContactForm" method="post">
        <h3>Cadastrando um novo contato</h3>
        <p>
            <label for="contactId">Id:</label>
            <input type="text" id="Id" name="Id" required/>
        </p>
        <p>
            <label for="contactName">Nome:</label>
            <input type="text" id="Name" name="Name" required/>
        </p>
        <input type="button" id="saveContact" value="Salvar" />
    </form>
    <span name="MessageForm" id="MessageForm"></span>
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/ScriptViews/contact.js")
}